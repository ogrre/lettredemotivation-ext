{
  "name": "lettredemotivation-ext",
  "version": "1.0.0",
  "description": "Browser extension (Chrome/Firefox) to generate personalized cover letters using AI. Dark mode UI, PDF resume parsing, multilingual support (FR/EN). Powered by OpenAI GPT-4o-mini.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint scripts/**/*.js",
    "lint:fix": "eslint scripts/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html}\"",
    "validate": "npm run lint && npm run format:check && npm run test:coverage",
    "build": "web-ext build --source-dir=.",
    "build:release": "./scripts/build.sh",
    "start:firefox": "web-ext run --source-dir=. --target=firefox-desktop",
    "start:chrome": "web-ext run --source-dir=. --target=chromium"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "web-ext": "^8.10.0"
  }
}
